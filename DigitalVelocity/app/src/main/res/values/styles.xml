<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/DVActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="DVActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#f00</item>
    </style>

    <style name="input" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:background">#a6aaa9</item>
    </style>

    <style name="label" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="contact" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">100dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="location_radio" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:button">@drawable/radio_location</item>
        <item name="android:textColor">@color/radio_location</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
